    <script>
        // Criar partículas animadas
        function criarParticulas() {
            const particulasContainer = document.getElementById('particulas');
            const cores = ['#9d4edd', '#c77dff', '#e0aaff', '#6a0dad'];
            
            for (let i = 0; i < 40; i++) {
                const particula = document.createElement('div');
                particula.classList.add('particula');
                
                // Tamanho aleatório
                const tamanho = Math.random() * 10 + 5;
                particula.style.width = `${tamanho}px`;
                particula.style.height = `${tamanho}px`;
                
                // Posição aleatória
                particula.style.left = `${Math.random() * 100}%`;
                
                // Cor aleatória
                const cor = cores[Math.floor(Math.random() * cores.length)];
                particula.style.background = cor;
                
                // Duração e atraso de animação aleatórios
                const duracao = Math.random() * 20 + 10;
                const atraso = Math.random() * 5;
                particula.style.animationDuration = `${duracao}s`;
                particula.style.animationDelay = `${atraso}s`;
                
                // Opacidade aleatória
                particula.style.opacity = Math.random() * 0.5 + 0.1;
                
                particulasContainer.appendChild(particula);
            }
        }
        
        // Função para simular o download
        function iniciarDownload(url, nomeArquivo) {
            const carregando = document.getElementById('carregando');
            const mensagem = document.getElementById('mensagemDownload');
            
            // Mostrar tela de carregamento
            carregando.style.display = 'flex';
            
            // Simular tempo de processamento do download
            setTimeout(() => {
                // Ocultar tela de carregamento
                carregando.style.display = 'none';
                
                // Mostrar mensagem de sucesso
                mensagem.style.display = 'block';
                
                // Iniciar o download (abordagem para links do MediaFire)
                // Para links diretos, usaríamos um link <a> com download attribute
                // Para o MediaFire, redirecionamos para a página
                window.open(url, '_blank');
                
                // Ocultar mensagem após 3 segundos
                setTimeout(() => {
                    mensagem.style.display = 'none';
                }, 3000);
            }, 1500);
        }
        
        // Adicionar efeito de digitação ao título principal
        function efeitoDigitacao() {
            const titulo = document.querySelector('.titulo-principal');
            const textoOriginal = titulo.textContent;
            titulo.textContent = '';
            
            let i = 0;
            function digitar() {
                if (i < textoOriginal.length) {
                    titulo.textContent += textoOriginal.charAt(i);
                    i++;
                    setTimeout(digitar, 50);
                }
            }
            
            setTimeout(digitar, 500);
        }
        
        // Inicializar quando a página carregar
        document.addEventListener('DOMContentLoaded', function() {
            criarParticulas();
            efeitoDigitacao();
            
            // Adicionar efeito de hover nos cartões
            const cartoes = document.querySelectorAll('.cartao-download');
            cartoes.forEach(cartao => {
                cartao.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px)';
                });
                
                cartao.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
